#include <iostream>
#include <iomanip>
using namespace std;
int main() {
    float no = 123.456789;
    cout<<fixed<<setprecision(2);
    cout<<"Formatted no. (fixed-point): "<<no<<endl;
    cout<<setprecision(3);
    cout<<"Formatted no. (scientific): "<<scientific<<no<<endl;
    cout<<setw(50)<<setfill('0');
    cout<<"Formatted no. (width and filled): "<<no<<endl;
    return 0;
}
